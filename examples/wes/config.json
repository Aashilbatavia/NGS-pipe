{
    "resources":{
        "H_sapiens_hg19":{
            "reference": "../resources/ucsc.hg19.fasta",
            "referenceFai": "../resources/ucsc.hg19.fasta.fai",
            "referenceDict": "../resources/ucsc.hg19.dict",
            "regions": "../resources/nexterarapidcapture_expandedexome_targetedregions.bed",
            "bwaIndex": "../resources/ucsc.hg19.fasta"
        },
        "general":{
            "sequencingAdapter": "/path/to/adapters.fa"
        }
    },
    "tools":{
        "bwa":{
            "mem":{
                "call":"../tools/bwa-0.7.15/bwa mem ",
                "params": "-M ",
                "scratch": "2000",
                "memory": "2000",
                "time": "235",
                "threads": 24
            }
        },
        "samtools":{
            "call": "../tools/samtools-1.3.1/bin/samtools ",
            "flagstat":{
                "scratch":"2000",
                "mem": "4000",
                "time": "20",
                "threads": 1
            },
            "index":{
                "scratch": "2000",
                "mem": "2000",
                "time": "100",
                "threads": 1
            },
            "mpileup":{
                "params": "-B -q 25 -Q 20",
                "outputTags": "DP,DP4,SP,DPR,DV",
                "scratch": "8000",
                "mem": "8000",
                "time": "1400",
                "threads": 1
            },
            "rmSecondary":{
                "scratch": "4000",
                "mem": "4000",
                "time": "235",
                "threads": 1
            },
            "rmDuplicates":{
                "threads": 2,
                "scratch": "2000",
                "mem": "2000",
                "time": "235"
            }
        },
        "picard":{
            "call": "java -Xmx10G -jar ../tools/picard.jar ",
            "markduplicates":{
                "removeDuplicates": "false",
                "createIndex": "false",
                "quiet": "false",
                "mem": "12000",
                "time": "1400",
                "scratch": "12000",
                "threads": 1,
                "assume_sorted": "true",
                "max_records_in_ram": "500000",
                "max_file_handles_for_read_ends_map": "1000"
            },
            "fixMateInformation":{
                "sortOrder": "coordinate",
                "mem": "12000",
                "time": "1400",
                "scratch": "12000",
                "threads": 1,
                "assume_sorted": "false",
                "max_records_in_ram": "500000"
            },
            "mergeBams":{
                "threads": 1,
                "mem": "12000",
                "time": "1400",
                "scratch": "12000",
                "assume_sorted": "true"
            }
        },
        "varscan":{
            "call": "java -Xmx20g -jar ../tools/VarScan.v2.3.9.jar",
            "somatic":{
                "params": "",
                "threads" : 1,
                "mem": "24000",
                "time": "1400",
                "scratch": "24000"
            }
        },
        "fastqc": {
            "file" : "../tools/FastQC/fastqc",
            "call" : "../tools/FastQC/fastqc",
            "scratch": "10000",
            "mem": "10000",
            "time": "60",
            "threads": 1
        },
        "qualimap":{
            "call": "/cluster/work/bewi/modules/qualimap/qualimap-build-05-02-17/qualimap-build-05-02-17/qualimap ",
            "threads": 2,
            "mem": "24000",
            "time": "1400",
            "scratch": "16000"
        }
    }
